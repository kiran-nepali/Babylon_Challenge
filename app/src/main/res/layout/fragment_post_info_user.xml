<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.PostInfoUserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:text="TITLE"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="245dp"
                android:layout_height="101dp"
                android:id="@+id/tv_postTitle" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="BODY"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_width="299dp"
                android:layout_height="148dp"
                android:id="@+id/tv_postBody" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_postTitle"/>
        <TextView
                android:text="AUTHOR NAME"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_width="222dp"
                android:layout_height="42dp"
                android:id="@+id/tv_authorName" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.566" android:layout_marginBottom="44dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_comments"/>
        <TextView
                android:text="COMMENTS"
                android:layout_width="102dp"
                android:layout_height="45dp"
                android:id="@+id/tv_comments"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="56dp" android:layout_marginBottom="56dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="All Comments::"
                android:textAlignment="textEnd"
                android:layout_width="116dp"
                android:layout_height="48dp"
                android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="52dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/tv_comments"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.677"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>